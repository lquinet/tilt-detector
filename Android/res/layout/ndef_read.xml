<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:background="@drawable/normal" android:id="@+id/ivBanner_menu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date :"
        android:id="@+id/lblDate"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/textViewDateMessage"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/lblDate"
        android:layout_toRightOf ="@id/lblDate"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evenement :"
        android:id="@+id/lblNDEF"
        android:layout_below="@+id/textViewDateMessage"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ndeftext!"
        android:id="@+id/textViewNdefMessage"
        android:layout_marginLeft="0dp"
        android:layout_alignTop="@+id/lblNDEF"
        android:layout_toEndOf="@+id/lblNDEF"
        android:layout_marginStart="15dp"
        android:textColor="#FFFFFF"/>

</RelativeLayout>